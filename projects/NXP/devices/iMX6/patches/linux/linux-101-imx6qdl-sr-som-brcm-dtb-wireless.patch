Add bluetooth node to uart4.

--- a/arch/arm/boot/dts/imx6qdl-sr-som-brcm.dtsi
+++ b/arch/arm/boot/dts/imx6qdl-sr-som-brcm.dtsi
@@ -62,8 +62,7 @@
 
 	usdhc1_pwrseq: usdhc1_pwrseq {
 		compatible = "mmc-pwrseq-simple";
-		reset-gpios = <&gpio5 26 GPIO_ACTIVE_LOW>,
-			      <&gpio6 0 GPIO_ACTIVE_LOW>;
+		reset-gpios = <&gpio5 26 GPIO_ACTIVE_LOW>;	/* WL_RST_N */
 		clocks = <&clk_brcm>;
 		clock-names = "ext_clock";
 	};
@@ -128,6 +127,12 @@
 	pinctrl-0 = <&pinctrl_microsom_brcm_bt &pinctrl_microsom_uart4>;
 	uart-has-rtscts;
 	status = "okay";
+
+	bluetooth {
+		compatible = "brcm,bcm4329-bt";
+		max-speed = <3000000>;
+		shutdown-gpios = <&gpio6 0 GPIO_ACTIVE_LOW>;	/* BT_RST_N */
+	};
 };
 
